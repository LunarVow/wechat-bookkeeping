/* pages/CopyChangetake/CopyChangetake.wxss */
.safe-area-top {
  height: env(safe-area-inset-top);
  width: 100%;
  background: #000;
}

.nav-header {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.back-btn {
  color: #fff;
  font-size: 32rpx;
  padding: 12rpx 24rpx;
  background: #333;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.switch-buttons {
  display: flex;
  justify-content: center;
  width: 66.66%;
  flex: 1;
  margin: 20rpx auto;
  height: 80rpx;
  border-radius: 40rpx;
  background: #333;
}

.switch-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
  transition: all 0.3s;
  z-index: 1;
}

.switch-btn.active {
  color: #fff;
  font-weight: 500;
}

.income.active {
  background: #09be4f;
}

.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999;
  padding: 0 30rpx;
  padding-top: env(safe-area-inset-top);
  height: 88rpx;
  background: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.page-content {
  padding-top: calc(88rpx + env(safe-area-inset-top) + 20rpx);
  padding-bottom: env(safe-area-inset-bottom);
  min-height: 100vh;
  box-sizing: border-box;
  background: #000;
  color: #fff;
}

.category-container {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  padding: 20rpx;
  gap: 10rpx;
  background: #333;
  border-radius: 20rpx;
  margin: 20rpx;
  border: 4rpx solid #444;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
}

.category-item text {
  font-size: 26rpx;
  margin-top: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
  padding: 0 8rpx;
  line-height: 1.2;
}

.category-item image {
  filter: invert(1);
  opacity: 0.8;
}

.category-item.active image {
  filter: none !important;
  opacity: 1;
}

.input-section {
  padding: 0 20rpx;
}

.remark-input {
  width: 300rpx;
  background: #333 !important;
  color: #fff !important;
  padding: 20rpx;
  border-radius: 12rpx;
  margin: 20rpx 0;
  font-size: 32rpx;
}

.date-picker {
  min-width: 290rpx !important;
  padding: 20rpx !important;
  background: #333 !important;
  color: #fff !important;
  font-size: 32rpx !important;
  border-radius: 12rpx !important;
}

.num-keyboard {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 10rpx;
  padding: 20rpx;
  background: #000;
}

.key {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #333 !important;
  color: #fff !important;
  border-radius: 8rpx;
}

.key[data-key="保存"] {
  background: #09be4f !important;
}

.date-row {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.amount-display {
  display: flex;
  align-items: center;
  margin-left: auto;
  padding: 0;
  color: #09be4f;
}

.amount-symbol {
  font-size: 36rpx;
}

.amount-input {
  font-size: 36rpx;
  padding: 0;
  margin: 0;
  width: auto;
  min-width: 80rpx;
  color: #09be4f;
}

.key:active {
  background-color: #404040 !important;
}

.func-key:active {
  background-color: #09be4f !important;
}

.operation-tip {
  padding: 20rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  background: #333;
  border-radius: 12rpx;
  margin: 20rpx;
}
