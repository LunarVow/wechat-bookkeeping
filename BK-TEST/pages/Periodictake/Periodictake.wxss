/* pages/Periodictake/Periodictake.wxss */
page {
  background: #000 !important;
}

.nav-header {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.back-btn {
  color: #fff;
  font-size: 32rpx;
  padding: 12rpx 24rpx;
  background: #333;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.switch-buttons {
  display: flex;
  justify-content: center;
  width: 66.66%;
  flex: 1;
  margin: 20rpx auto;
  height: 80rpx;
  border-radius: 40rpx;
  background: #333;
}

.switch-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
  transition: all 0.3s;
  z-index: 1;
}

.switch-btn.active {
  color: #fff;
  font-weight: 500;
}

.expense.active {
  background: #ee3c3c;
}

/* 修改收入按钮激活颜色 */
.income.active {
  background: #09be4f !important;
}

.month-picker {
  background: #333;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  margin: 20rpx;
  text-align: center;
  width: 250rpx;
  display: inline-block;
}

.category-container {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  padding: 20rpx;
  gap: 10rpx;
  background: #333;
  border-radius: 20rpx;
  margin: 20rpx;
  border: 4rpx solid #444;
}
.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  text-align: center;
}

.category-item text {
  font-size: 26rpx;
  margin-top: 8rpx;
  color: #fff;
}

.category-item image {
  width: 40px;
  height: 40px;
  filter: invert(1);
  opacity: 0.8;
}

.category-item.active > image {
  filter: invert(46%) sepia(85%) saturate(399%) hue-rotate(90deg) brightness(98%) contrast(91%) !important;
  opacity: 1 !important;
}

.input-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  margin: 20rpx 0;
}

.remark-input {
  width: 300rpx;
  background: #333 !important;
  color: #fff !important;
  padding: 20rpx;
  border-radius: 12rpx;
  margin: 20rpx 0;
  font-size: 32rpx;
}

/* 修改金额显示颜色为收入绿色 */
.amount-display {
  font-size: 36rpx;
  color: #09be4f;
  text-align: right;
  padding: 20rpx;
}

.num-keyboard {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 10rpx;
  padding: 20rpx;
  background: #000;
}

.key {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #333;
  border-radius: 8rpx;
  color: #fff;
  font-size: 32rpx;
}

.key[data-key="保存"] {
  background: #09be4f !important;
}

.month-range-picker {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin: 20rpx;
}
