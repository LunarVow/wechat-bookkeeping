/* pages/main/login.wxss */
.container {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f0f2f5;
}

.login-box {
  width: 80%;
  padding: 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.logo {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto 60rpx;
}

.username-input {
  height: 100rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.login-btn {
  background: #07c160;
  color: white;
  border-radius: 10rpx;
  font-size: 34rpx;
}

.login-btn:active {
  background: #06ad56;
}

.auth-btn {
  background: #07c160;
  color: white;
  border-radius: 10rpx;
  font-size: 34rpx;
  margin-top: 40rpx;
}

.result-tip {
  padding: 20rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
  text-align: center;
}

.success {
  background: #e6f4ff;
  color: #1677ff;
}

.error {
  background: #fff2f0;
  color: #ff4d4f;
}
